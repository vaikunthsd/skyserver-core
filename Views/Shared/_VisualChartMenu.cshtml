<h5 class="form-subtitle">Image Options</h5>
<div class="form-group">
    <label class="control-label">RA (deg)</label><input type="text" class="form-control" size="3" maxlength="20" align="right" value="179.689293428354" name="ra" id="ra" onchange="setra();">
    <label class="control-label">DEC (deg)</label><input type="text" class="form-control" size="3" maxlength="20" align="right" value="-0.454379056007667" name="dec" id="dec" onchange="setdec();">
    <label class="control-label">Scale ("/pix)</label><input type="text" class="form-control" size="3" maxlength="20" align="right" value="12.676064" name="scale" id="scale" onchange="setscale(0)">
    <label class="control-label">Width (pix)</label><input type="text" class="form-control" size="3" maxlength="20" align="right" value="612" name="width" id="width" onchange="setwidth();">
    <label class="control-label">Height (pix)</label><input type="text" class="form-control" size="3" maxlength="20" align="right" value="512" name="height" id="height" onchange="setheight();">
    <input type="text" class="hidden" size="3" maxlength="20" align="right" value="" name="opt" id="opt" onchange="setoptstr(1);">
</div>

